<% if @genre.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@genre.errors.count, "error") %>
     		preventing you from adding a genre:
      </h2>
    <ul>
    <% @genre.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

	<%= form_tag genre_path(@genre), method: "patch" do %>
	  <%= render "form" %>
	<% end %>
