<% if flash[:notice] %>
   <div class="notice"><%= flash[:notice] %></div>
 <% end %>


<h2><%=link_to @review.book_title, book_path(@review.book)%> Review</h2>
<h3>Author: <%=link_to @review.book.author_name, author_path(@review.book.author)%></h3>
<h3>Reviewer: <%=link_to @review.user.name, user_path(@review.user)%></h3>

<h3>Rating: <%=@review.rating%> Stars</h3>

<p><%=@review.content%></p><br><br><br><br>

<%if current_user.id == @review.user_id%>
<%=link_to "Edit Review", edit_book_review_path(@review.book, @review)%>
<%end%>
