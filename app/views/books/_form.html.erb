
<%= form_for @book do |f| %>
<%=f.label "Title:"%>
<%=f.text_field :title%><br><br>
<%=f.label "Author:"%>
  <%= f.text_field :author_name, list: "authors_autocomplete" %>
  <datalist id="authors_autocomplete">
    <% Author.all.each do |author| %>
      <option value="<%= author.name %>"><br>
    <% end %><br><br>
  </datalist><br><br>
  <%= f.submit "Add Book"%>
<% end %>
