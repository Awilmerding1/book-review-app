<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@book.errors.count, "error") %>
     		preventing you from adding a book:
      </h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

	<%= form_tag books_path do %>
	  <%= render "form" %>
	<% end %>
